<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_marginVertical="7dp"
        android:layout_marginHorizontal="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sNoID"
            android:text="123"
            android:layout_marginEnd="12dp"
            android:textColor="@color/black"
            android:textSize="@dimen/title_size0"
            android:fontFamily="@string/regular"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_width="40dp"
            android:layout_height="wrap_content"/>


        <ImageView
            android:id="@+id/countryImgID"
            android:layout_toEndOf="@id/sNoID"
            android:layout_centerVertical="true"
            android:layout_width="70dp"
            android:layout_height="45dp"/>



        <TextView
            android:id="@+id/countryNameID"
            android:text="Bangladesh"
            android:layout_marginEnd="12dp"
            android:layout_toEndOf="@id/countryImgID"
            android:textColor="@color/black"
            android:textSize="@dimen/title_size0"
            android:fontFamily="@string/regular"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/countryCasesID"
            android:text="12345"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:textColor="@color/black"
            android:textSize="@dimen/title_size0"
            android:fontFamily="@string/regular"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>